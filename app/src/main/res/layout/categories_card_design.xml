<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:layout_margin="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/categories_relative_layout"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="@color/black">

        <ImageView
            android:id="@+id/categories_dsa_img"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/winterapp_gfg"/>

        <TextView
            android:id="@+id/categories_dsa_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geeksforgeeks\nJava App Development"
            android:lineHeight="20dp"
            android:layout_toRightOf="@id/categories_dsa_img"
            android:layout_toEndOf="@+id/categories_dsa_img"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/muli"/>

        <RatingBar
            android:id="@+id/categories_dsa_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/categories_dsa_img"
            android:layout_below="@id/categories_dsa_title"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_marginLeft="10dp"
            android:rating="4"/>

        <TextView
            android:id="@+id/categories_dsa_self_placed_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/categories_dsa_rating"
            android:layout_toRightOf="@id/categories_dsa_img"
            android:padding="10dp"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>